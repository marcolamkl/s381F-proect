<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <title><%=record.name%>Display</title>
  </head>

    <body>
      <nav class="navbar" style="background-color:#152934">
        <div class="navbar-brand">
          <h1 class="title is-1" style="color: #dee1e3">Display <%=record.name%></h1>
        </div>
      </nav>

      <div class="section">
        <% if (record.photo != null) { %>
          <img src="data:<%=record.photo.mimetype%>;base64,<%=record.photo.image%>" width="50%" height="50%" alt="base64 test"/><br>
        <% } %>
        <div class="field">
          <label class="name" style="color: #4f9688">Name: </label><%=record.name%><br>
        </div>
        <div class="field">
          <label class="borough" style="color: #4f9688">Borough: </label><%=record.borough%><br>
        </div>
        <div class="field">
          <label class="cuisine" style="color: #4f9688">Cuisine: </label><%=record.cuisine%><br>
        </div>
        <div class="field">
          <label class="street" style="color: #4f9688">Street: </label><%=record.address.street%><br>
        </div>
        <div class="field">
          <label class="building" style="color: #4f9688">Building: </label><%=record.address.building%><br>
        </div>
        <div class="field">
          <label class="zipcode" style="color: #4f9688">Zipcode: </label><%=record.address.zipcode%><br>
        </div>
        <div class="field">
            <label class="gps" style="color: #4f9688">GPS: </label>[<%=record.address.coord.axisx%> <%=record.address.coord.axisy%>]<br/>
        </div>
        <div class="field">
          <label class="rating" style="color: #4f9688">Rating: </labal><br/>
            <% if (typeof record.score == "undefined") { %>
            <label class="no-rating">No rating yet</label>
            <% } else { %>
              <ol class="is-lower-alpha">
                <% record.score.forEach( score => { %>
                <li style="margin-left: 30px;">
                  <label class="rating-item" style="color: #4a4a4a"><%=score.value %> (<%= score.userid %>)</label>
                </li>
                <% }) %>
              </ol>
            <% } %>
          </label>
        </div>
        <div class="field">
          <labal class="owner" style="color: #4f9688">Created by: </labal><%=record.owner%><br/>
        </div>

        <% if (record.address.coord.axisx != "" && record.address.coord.axisy != "") { %>
        <div class="field">
          <div class="control">
            <a class="button is-text" style="color: blue" href="/googlemap?lat=<%=record.address.coord.axisx%>&lon=<%=record.address.coord.axisy%>&restaurant=<%=record.name%>">Google Map</a><br>
          </div>
        </div>
        <% } %>

        <div>
          <a class="button is-link" href="/score?_id=<%=record._id%>">Score</a>
          <a class="button is-link" href="/change?_id=<%=record._id%>">Edit</a>
          <a class="button is-link" href="/delete?_id=<%=record._id%>">Delete</a>
          <a class="button is-link" href="/list">back</a>
        </div>

      </div>
    </body>
</html>
